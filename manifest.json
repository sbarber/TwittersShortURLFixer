{
  "name": "Twitter's URL Fix",
  "version": "2.0.1",
  "description": "Fix those twitter URL links that have punctuation at the end.",
  "manifest_version": 2,
  "homepage_url": "https://github.com/sbarber/TwittersShortURLFixer",
  "icons": {
      "128": "twitter.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
      "matches": ["http://t.co/*", "https://t.co/*",
        "http://twitter.com/*", "https://twitter.com/*"
      ],
      "js": ["content_script.js"]
  }],

  "permissions": [
    "tabs",
    "http://t.co/*", "https://t.co/*",
    "http://twitter.com/*", "https://twitter.com/*",
    "background"
  ]

}
